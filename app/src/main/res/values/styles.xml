<resources>

    <style name="big_text_center">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="amount_hint_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="country_textview">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="currency_textview">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="spinner_layout_style">
        <item name="android:textColor">@drawable/spinner_selected_color</item>
<!--        <item name="android:textColor">@color/teal_green</item>-->

        <item name="android:textColorHint">@color/teal_green</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>
